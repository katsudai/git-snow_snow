<div class="row border border-light rounded-pill shadow mb-5 bg-white rounded">
  <div class="col-12 text-center">
    <span class="col-6">
      <%= link_to "投稿一覧", posts_path, class: "btn btn-dark text-light m-2" %>
    </span>
    <span class="col-6">
      <%= link_to "人気の投稿", ranking_posts_path, class: "btn btn-dark text-light m-2" %>
    </span>
    <span class="col-6">
      <%= link_to "投稿検索", search_posts_path, class: "btn btn-dark text-light m-2" %>
    </span>
    <% if user_signed_in? %>
      <span class="col-6">
        <%= link_to "マイページ", user_path(current_user), class: "btn btn-dark text-light m-2" %>
      </span>
      <span class="col-6">
        <%= link_to "投稿する", new_post_path, class: "btn btn-dark text-light m-2" %>
      </span>
    <% end %>
  </div>
</div>